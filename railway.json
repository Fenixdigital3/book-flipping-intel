{
  "build": {
    "builder": "docker-compose",
    "composeFilePaths": ["backend/docker-compose.yml"],
    "services": ["api"]
  },
  "variables": [
    { "key": "DATABASE_URL",  "value": "" },
    { "key": "JWT_SECRET_KEY", "value": "" }
  ],
  "healthCheck": {
    "path": "/healthz",
    "interval": 30,
    "timeout": 5,
    "successCodes": [200]
  },
  "onFailure": {
    "retries": 10
  }
}